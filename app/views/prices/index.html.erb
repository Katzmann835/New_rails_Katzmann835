<h1>Prices</h1>

<h2> Find <span style="color:brown">the Cheapest</span> resturant item:</h2>

<p>Minimum Price:</p>
<% if @Result_min.any?%>
  <% @Result_min.each do |price| %>
    <%=render price%>
    <%end%>
  <%else%>
    <p>No Minimum Price found</p>
  <%end%>

<h2> Find <span style="color:gold">the most expensive</span> resturant item:</h2>
<p>Maximum Price:</p>
<% if @Result_max.any?%>
  <% @Result_max.each do |price| %>
    <%=render price%>
    <%end%>
  <%else%>
    <p>No Maximum Price found</p>
  <%end%>


<div id="prices">
  <% @prices.each do |price| %>
    <%= render price %>
    <p>
      <%= link_to "Show this price", price %>
    </p>
  <% end %>
</div>

